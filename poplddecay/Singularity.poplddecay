Bootstrap: docker

From: ubuntu:latest

%labels
    Topic Bioinformatics
    Input VCF

%help
    singularity run popLdDecay.simg -h

%post
    apt-get update --fix-missing && apt-get install -y git autoconf g++ zlib1g gcc make automake pkg-config zlib1g-dev libbz2-dev liblzma-dev r-base
    cd /opt
    git clone https://github.com/BGI-shenzhen/PopLDdecay.git 
    cd PopLDdecay 
    chmod 755 configure
    ./configure
    make
    mv PopLDdecay /bin/

%runscript
    exec "$@"

